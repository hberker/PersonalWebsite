body{
    color: white;
    background-color: #162126;
    font-family: monospace;
    margin: auto;
}
a{
    color: #c48271;
}
.loc-caption:before {
    content: attr(title);
    display: block;
}

section:nth-child(1) {
    background: lightblue;
}
section:nth-child(2) {
background: lightgreen;
}
section:nth-child(3) {
background: purple;
}
section:nth-child(4) {
background: red;
}
section:nth-child(5) {
background: yellow;
}

@media screen and (max-width: 2000px) {
    
    .imgOfMe {
        width: 40%;
        margin-top: 10px;
        padding-left: 5px;
        padding-right: 5px;
        float: right;
        display: block;
        align-content: center;
        border-radius: 20px;
    }
    
    .postContent{
  
      color: white;
      font-size: 1.2em;
      font-family: monospace;
        
    }
    
    .introCont{
      margin-left: 15%;
      margin-right: 15%;
      overflow: auto;
    }
    .indexImgOfMe, img{
        width: 35%;
        padding-top: 5px;
        padding-left:32.5%;
        padding-right:32.5%;
    }
    .prprojectIMG, img{
        width: 80%;
        padding-left: 10%;
        padding-right: 10%;
    }
    .aboutText{
        text-align: left;
        margin-right: 0px;
    }
    h2, .text{
        text-align: center;
    }
    h1{
        color: #162126;
        display: block;
        margin: 2% auto;
        text-align: center;
        font-size: 1em;
        font-family: monospace;
        
        border-radius: 25px;
        background: #d7d7d7; 
        padding: 15px;
        padding-top: 10px;
        padding-bottom: 10px;
    
        width: 35vh;
        border-color: black;
      }
}
  
@media screen and (max-width: 700px) {
    .postContent{
        color: white;
        font-size: 1.0em;
        font-family: monospace;
        margin-left: 0%;
        margin-right: 0%;
    }
    .text{
        margin-left:  10%;
        margin-right: 10%;
    }
    .introCont{
        margin-left:  10%;
        margin-right: 10%;
    }
    .indexImgOfMe,img{
        width: 50%;
        padding-left:25%;
        padding-right:25%;
    }
    .imgOfMe {
        width: 80%;
        margin-right: 10%;

    }
    .prprojectIMG, img{
        padding-left: 0%;
        padding-right: 0%;
        width: 100%;
    }
    h1{
        color: #162126;
        display: block;
        margin: 2% auto;
        text-align: center;
        font-size: 5vw;
        font-family: monospace;
        
        border-radius: 25px;
        background: #d7d7d7; 
        padding: 15px;
        padding-top: 10px;
        padding-bottom: 10px;
    
        width: 60%;
        border-color: black;
      }
   
    
    
   
}
